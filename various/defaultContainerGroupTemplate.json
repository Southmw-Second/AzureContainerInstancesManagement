{
    "resourceGroup": "acimanagement",
    "containerGroupName": "%CONTAINER_GROUP_NAME%",
    "containerGroup" : {
        "location": "westeurope",
        "containers": [{
            "name": "%CONTAINER_NAME%",
            "image": "dgkanatsios/docker_openarena", 
            "environmentVariables": [{
              "name":"OA_STARTMAP",
              "value":"dm4ish"
            },{
              "name":"OA_PORT",
              "value":"27960"
            }],
            "resources": {
                "requests": {
                    "memoryInGB": 0.5,
                    "cpu": 0.5
                }
            },
            "ports": [{
                "protocol": "udp",
                "port": 27960
            }],
            "volumeMounts":[{
              "name":"openarenadatavolume",
              "mountPath": "/data",
              "readOnly": false
            }
              ]
        }],
        "ipAddress": {
            "ports": [{
                "protocol": "udp",
                "port": 27960
            }],
            "type": "Public"
        },
        "osType": "Linux",
        "volumes": [{
      "name": "openarenadatavolume",
      "azureFile": {
        "shareName": "openarenadata",
        "storageAccountName": "%MOUNT_STORAGE_ACCOUNT_NAME%",
        "storageAccountKey": "%MOUNT_STORAGE_ACCOUNT_KEY%"
      }
    }]
    }
}